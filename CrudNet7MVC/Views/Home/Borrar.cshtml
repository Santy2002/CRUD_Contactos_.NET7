@model CrudNet7MVC.Models.Contacto

@{
    ViewData["Title"] = "Borrar";
}

<div class="row w-50 mx-auto">
    <div class="offset-12">
        <div class="card border mx-auto mt-4">
            <div class="card-header bg-dark">
                <h3 class="text-white">Editar Contacto</h3>
            </div>
            <div class="card-body w-50 mx-auto">
                @using (Html.BeginForm("Borrar", "Home"))
                {
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group">
                        <label asp-for="Nombre" class="control-label"></label>
                        <input asp-for="Nombre" class="form-control" readonly />
                    </div>
                    <div class="form-group mt-3">
                        <label asp-for="Celular" class="control-label"></label>
                        <input asp-for="Celular" class="form-control" readonly/>
                    </div>
                    <div class="form-group mt-3">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" class="form-control" readonly/>
                    </div>
                    <div class="form-group mt-3">
                        <input type="submit" value="Borrar" class="btn btn-primary d-block mx-auto" />
                    </div>
                }

                <a asp-controller="Home" asp-action="Index" class="mt-3">Volver</a>
            </div>
        </div>
    </div>
</div>
