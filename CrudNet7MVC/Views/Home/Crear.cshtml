@model CrudNet7MVC.Models.Contacto
@{
    ViewData["Title"] = "Crear Nuevo Contacto";
}

<div class="row w-50 mx-auto">
    <div class="offset-12">
        <div class="card border mx-auto mt-4">
            <div class="card-header bg-dark">
                <h3 class="text-white">Creacion de Contacto</h3>
            </div>
            <div class="card-body w-50 mx-auto">
                @using (Html.BeginForm("Crear", "Home"))
                {
                    <div class="form-group">
                        <div class="form-group mt-3">
                            <label asp-for="Nombre"></label>
                            <input asp-for="Nombre" class="form-control" placeholder="Ingrese un Nombre"/>
                            @Html.ValidationMessageFor(m => m.Nombre, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group mt-3">
                            <label asp-for="Celular"></label>
                            <input asp-for="Celular" class="form-control" placeholder="Ingrese un Celular" />
                            @Html.ValidationMessageFor(m => m.Celular, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group mt-3">
                            <label asp-for="Email"></label>
                            <input asp-for="Email" class="form-control" placeholder="Ingrese un Email" />
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group mt-3">
                            <Button type="submit" value="submit" class="btn btn-secondary d-block mx-auto"><i class="bi bi-person-fill"></i> Crear</Button>
                        </div>
                    </div>
                }

                <a asp-controller="Home" asp-action="Index">Volver</a>
            </div>
        </div>
    </div>
</div>